{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "coc",
    "description": "real-time map"
  },
  "tags": [
    {
      "name": "user",
      "description": "user api"
    },
    {
      "name": "location",
      "description": "location api"
    },
    {
      "name": "store",
      "description": "store api"
    },
    {
      "name": "donate",
      "description": "donate api"
    }
  ],
  "paths": {
    "/user/register": {
      "post": {
        "tags": ["user"],
        "summary": "회원가입",
        "requestBody": {
          "description": "유저 회원가입",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "accountId": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "type": {
                    "format": "string",
                    "enum": ["normal", "confiremd", "shopkeeper"],
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "createdUser": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": ["user"],
        "summary": "로그인",
        "requestBody": {
          "description": "유저 로그인",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "accountId": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/update": {
      "patch": {
        "tags": ["user"],
        "summary": "정보 업데이트",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "헤더 안에 토큰 넣으셈",
            "required": true
          }
        ],
        "requestBody": {
          "description": "사용자의 정보 업데이트",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "accountId": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["normal", "confiremd", "shopkeeper"]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/location": {
      "post": {
        "tags": ["location"],
        "summary": "위치 저장",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "헤더 안에 토큰 넣으셈",
            "required": true
          }
        ],
        "requestBody": {
          "description": "사용자의 위도, 경도를 저장및 주변 확진자 동선 불러오기",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "longitude": {
                    "type": "integer"
                  },
                  "latitude": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "createdLocation": {
                      "$ref": "#/components/schemas/Location"
                    },
                    "overlapUsers": {
                      "type": "array",
                      "items": {
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "location": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "integer"
                              },
                              "longitude": {
                                "type": "integer"
                              },
                              "latitude": {
                                "type": "integer"
                              },
                              "createdAt": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/location/my": {
      "get": {
        "tags": ["location"],
        "summary": "내 경로 보기",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "헤더 안에 토큰 넣으셈",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "location": {
                      "type": "array",
                      "items": {
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "longitude": {
                            "type": "integer"
                          },
                          "latitude": {
                            "type": "integer"
                          },
                          "createdAt": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/location/confirmer": {
      "post": {
        "tags": ["location"],
        "summary": "확진자 동선 가져오기",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "헤더 안에 토큰 넣으셈",
            "required": true
          }
        ],
        "requestBody": {
          "description": "경도, 위도를 입력해서 확진자의 동선을 가져오는 API",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "longitude": {
                    "type": "integer"
                  },
                  "latitude": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    
                  }
                }
              }
            }
          }
        }
      }
    },
    "/store/:id": {
      "get": {
        "tags": ["store"],
        "summary": "특정 상점 보기",
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "store": {
                      "$ref": "#/components/schemas/Store"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/store/my": {
      "get": {
        "tags": ["store"],
        "summary": "내 상점 보기",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "헤더 안에 토큰 넣으셈",
            "required": true
          }
        ]
      }
    },
    "/store": {
      "post": {
        "tags": ["store"],
        "summary": "내 상점 등록",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "헤더 안에 토큰 넣으셈",
            "required": true
          }
        ],
        "requestBody": {
          "description": "나의 상점의 위치를 등록하는 api",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "longitude": {
                    "type": "integer"
                  },
                  "latitude": {
                    "type": "integer"
                  },
                  "businessNumber": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "createdStore": {
                      "$ref": "#/components/schemas/Store"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/store/near": {
      "post": {
        "tags": ["store"],
        "summary": "내 주변 상점 불러오기",
        "requestBody": {
          "description": "내 주변에 있는 상점 불러오는 API (POST인 이유는 body로 위도, 경도를 보내야 하기 때문)",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "longitude": {
                    "type": "number"
                  },
                  "latitude": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "nearbyStores": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Store"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/store/update": {
      "patch": {
        "tags": ["store"],
        "summary": "상점 업데이트",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "헤더 안에 토큰 넣으셈",
            "required": true
          }
        ],
        "requestBody": {
          "description": "나의 상점을 업데이트하는 API",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "longitude": {
                    "type": "integer"
                  },
                  "latitude": {
                    "type": "integer"
                  },
                  "businessNumber": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "updatedStore": {
                      "$ref": "#/components/schemas/Store"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/store/delete": {
      "delete": {
        "tags": ["store"],
        "summary": "내 상점 삭제",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "헤더 안에 토큰 넣으셈",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/donate": {
      "post": {
        "tags": ["donate"],
        "summary": "기부",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "헤더 안에 토큰 넣으셈",
            "required": true
          }
        ],
        "requestBody": {
          "description": "특정 상점에 기부하는 API",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "constributions": {
                    "type": "number"
                  },
                  "storeId": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/donate/my": {
      "get": {
        "tags": ["donate"],
        "summary": "기부 내역",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "헤더 안에 토큰 넣으셈",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "myLogs": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/DonationLogs"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
