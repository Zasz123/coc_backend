{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "coc",
    "description": "real-time map"
  },
  "tags": [
    {
      "name": "user",
      "description": "user api"
    },
    {
      "name": "location",
      "description": "location api"
    }
  ],
  "paths": {
    "/user/register": {
      "post": {
        "tags": ["user"],
        "summary": "회원가입",
        "requestBody": {
          "description": "유저 회원가입",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "accountId": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "type": {
                    "format": "string",
                    "enum": ["normal", "confiremd", "shopkeeper"],
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "createdUser": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": ["user"],
        "summary": "로그인",
        "requestBody": {
          "description": "유저 로그인",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "accountId": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/update": {
      "patch": {
        "tags": ["user"],
        "summary": "정보 업데이트",
        "requestBody": {
          "description": "사용자의 정보 업데이트",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "token": {
                    "type": "string"
                  },
                  "accountId": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["normal", "confiremd", "shopkeeper"]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/location": {
      "post": {
        "tags": ["location"],
        "summary": "위치 저장",
        "requestBody": {
          "description": "사용자의 위도, 경도를 저장",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "token": {
                    "type": "string"
                  },
                  "longitude": {
                    "type": "integer"
                  },
                  "latitude": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "createdLocation": {
                      "$ref": "#/components/schemas/Location"
                    },
                    "overlapUsers": {
                      "type": "array",
                      "items": {
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "location": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "integer"
                              },
                              "longitude": {
                                "type": "integer"
                              },
                              "latitude": {
                                "type": "integer"
                              },
                              "createdAt": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/location/my": {
      "post": {
        "tags": ["location"],
        "summary": "내 경로 보기",
        "requestBody": {
          "description": "요청보낸 사용자의 경로 보기",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "token": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "location": {
                      "type": "array",
                      "items": {
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "longitude": {
                            "type": "integer"
                          },
                          "latitude": {
                            "type": "integer"
                          },
                          "createdAt": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "accountId": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      },
      "Location": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "userId": {
            "type": "integer"
          },
          "longitude": {
            "type": "integer"
          },
          "latitude": {
            "type": "integer"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      }
    }
  },
  "definitions": {
    "Type": {
      "properties": {
        "type": {
          "type": "string",
          "enum": {
            "&ENUM": ["normal", "confiremd", "shopkeeper"]
          }
        }
      }
    }
  }
}
